<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">

    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Summary">
        <item name="android:textColor">@color/text_summary</item>
    </style>

    <style name="Text.Confirm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.TitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.TitleBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.TitleBar.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary_grey</item>
    </style>

    <style name="Text.WalletDetail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.WalletDetail.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.WalletDetail.Item">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_un_select</item>
    </style>

    <style name="Text.VipLevel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.VipLevel.Index">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.VipLevel.Value">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/vip_level_list_text</item>
    </style>

    <style name="Text.Google">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Google.Title">
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Google.Normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Google.Hint">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_un_select</item>
    </style>

    <style name="Text.Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>